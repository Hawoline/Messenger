<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_circle_image_view"
            android:layout_width="60dp" 
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

    <TextView android:layout_width="0dp"
              android:layout_height="0dp"
              android:id="@+id/username_text_view_new_message"
              android:text="Profile"
              android:textStyle="bold"
              app:layout_constraintLeft_toRightOf="@+id/profile_circle_image_view"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="@+id/profile_circle_image_view"
              app:layout_constraintBottom_toBottomOf="@+id/profile_circle_image_view"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
    />
    
</androidx.constraintlayout.widget.ConstraintLayout>