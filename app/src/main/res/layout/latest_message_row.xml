<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="120dp"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/profile_image_view_latest_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="24dp"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/username_text_view_latest_message"
              android:text="kermgpor"
              android:textColor="@android:color/black"
              android:textStyle="bold"
              app:layout_constraintLeft_toRightOf="@+id/profile_image_view_latest_message"
              app:layout_constraintTop_toTopOf="@+id/profile_image_view_latest_message"
              android:layout_marginLeft="8dp"
              />

    <TextView android:layout_width="0dp" android:layout_height="0dp"
              android:id="@+id/latest_message_text_view"
              android:text="kgmroprokg"
              android:textColor="@android:color/black"
              app:layout_constraintLeft_toLeftOf="@+id/username_text_view_latest_message"
              app:layout_constraintTop_toBottomOf="@+id/username_text_view_latest_message"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginRight="16dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="16dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>